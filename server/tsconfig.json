{
  "compilerOptions": {
    "target": "es5",                              
    "module": "commonjs",                         
    "downlevelIteration": true,                  
    "isolatedModules": true,                     
    "strict": true,                                 
    "esModuleInterop": true,                        
    "experimentalDecorators": true,     
    "emitDecoratorMetadata": true,  
    "skipLibCheck": true,  
    "forceConsistentCasingInFileNames": true, 
    "outDir": "dist",
    "baseUrl": "./",
    "paths": {"@/*":["src/*"]},
  },
  "exclude": ["test"],
  "include": ["src", "socket.ts", "app.ts", "bin"]
}
